---
import pfp from '../assets/pfp.jpg';
---

<section class="container">
    <div class="header animate__animated animate__fadeInUp">
        <img src={pfp.src} alt="Profile Picture" width="250px" height="250px" class="profile-image">
    </div>

    <div class="content">
        <section class="bio animate__animated" data-animate="animate__fadeInUp">
            <h2>Who I Am</h2>
            <p>
            </p>
        </section>
        <section class="skills">
            <h2>Skills</h2>
            <div class="skills-grid">
                <div class="skill-card animate__animated" data-animate="animate__fadeInLeft">HTML & CSS</div>
                <div class="skill-card animate__animated" data-animate="animate__fadeInLeft">JavaScript</div>
                <div class="skill-card animate__animated" data-animate="animate__fadeInLeft">Python</div>
                <div class="skill-card animate__animated" data-animate="animate__fadeInLeft">PHP</div>
                <div class="skill-card animate__animated" data-animate="animate__fadeInLeft">Astro</div>
            </div>
        </section>

        <section class="experience">
            <h2>Experience</h2>
            <div class="experience-grid">
                <div class="experience-card">
                    <h3>Education</h3>
                    <ul>
                        <li>Aventus</li>
                        <li>Still in school</li>
                    </ul>
                </div>
            </div>
        </section>

        <section class="interests">
            <h2>Hobbies</h2>
            <div class="interests-grid">
                <div class="skill-card">Mountainbiking</div>
                <div class="skill-card">Basketball</div>
                <div class="skill-card">Gaming</div>
            </div>
        </section>
    </div>
</section>

<script>
  const elements = document.querySelectorAll('[data-animate]');

  const observer = new IntersectionObserver(
    (entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const el = entry.target as HTMLElement;
          if (el.dataset.animate) {
            el.classList.add(el.dataset.animate);
          }
          el.style.opacity = "1"; // make visible
          observer.unobserve(el); // optional: animate only once
        }
      });
    },
    { threshold: 0.6 } // triggers when 60% of element is visible
  );

  elements.forEach(el => observer.observe(el));

  
</script>



<style>
    .skills .skill-card:nth-child(1) { animation-delay: 0.2s; }
    .skills .skill-card:nth-child(2) { animation-delay: 0.4s; }
    .skills .skill-card:nth-child(3) { animation-delay: 0.6s; }
    .skills .skill-card:nth-child(4) { animation-delay: 0.8s; }
    .skills .skill-card:nth-child(5) { animation-delay: 1s; }


    .animate__animated {
        opacity: 0;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .profile-image {
        border-radius: 50%;
        margin: 2rem 0;
        object-fit: cover;
    }

    h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #f5f5f5;  /* Changed from #333 to light color */
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 2rem;
        color: #e0e0e0;  /* Changed from #444 to light color */
        margin-bottom: 1.5rem;
    }

    h3 {
        font-size: 1.5rem;
        color: #d0d0d0;  /* Changed from #555 to light color */
        margin-bottom: 1rem;
    }

    /* The text within .bio, .experience-card, and .skill-card will keep their original styling */
    .content {
        display: grid;
        gap: 4rem;
        padding: 1rem;
    }

    .bio {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        background: linear-gradient(145deg, #91cace2a, #91cace5b);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .bio p {
        line-height: 1.6;
        padding: 1rem;
    }

    .experience-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .experience-card {
        background: #91cace5b;
        padding: 1.5rem;
        border-radius: 8px;
        text-align: center;
    }

    .experience-card ul {
        list-style-type: none;
        padding: 0;
    }

    .experience-card li {
        margin: 0.5rem 0;
    }

    .interests-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
    }

    .skill-card {
        background: linear-gradient(145deg, #91cace5b, #91cace5b);
        padding: 1.2rem;
        border-radius: 12px;
        text-align: center;
        font-weight: 500;


        
    }

    @media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        h3 {
            font-size: 1.2rem;
        }

        .experience-grid {
            grid-template-columns: 1fr;
        }

        .interests-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
